<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginRight="10dp"
              android:orientation="vertical">

    <!-- 108 * 133 -->
    <androidx.cardview.widget.CardView
            android:layout_width="110dp"
            android:layout_height="140dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F7F7F7"
            android:background="#F7F7F7"
            card_view:cardElevation="0dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


            <ImageView
                    android:id="@+id/foodImage"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_launcher_foreground"/>

            <TextView
                    android:id="@+id/foodImageKName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:text="음식 이름"
                    android:fontFamily="@font/godofont"
                    android:textColor="#191D21"/>

            <TextView
                    android:text="two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:id="@+id/textView2"/>


            <LinearLayout
                    android:id="@+id/savedFoodButton"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/restaurant_menu_call_button" android:paddingLeft="10dp"
                    android:paddingRight="10dp" android:paddingTop="5dp" android:paddingBottom="5dp">

                <ImageView
                        android:layout_width="6dp"
                        android:layout_height="9dp"
                        android:layout_gravity="center_vertical"
                        card_view:srcCompat="@drawable/saved_black"
                        android:id="@+id/savedImage"/>

                <TextView
                        android:id="@+id/savedTextView"
                        android:text="Saved"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:textSize="8sp"/>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>