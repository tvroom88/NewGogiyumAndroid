<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:orientation="vertical">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F7F7F7"
            android:background="#F7F7F7"
            card_view:cardElevation="0dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">


            <ImageView
                    android:id="@+id/restaurantImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_launcher_foreground"/>


            <TextView
                    android:id="@+id/resName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="식당 이름"
                    android:fontFamily="@font/godo"
                    android:textColor="#191D21"/>

            <TextView
                    android:id="@+id/resAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:text="식당 주소"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="#191D21"/>

            <!--    google and yelp rating bar-->
            <LinearLayout
                    android:id="@+id/yelp_rate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/resAddress">

                <ImageView
                        android:id="@+id/yelp_image"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/yelp"
                        android:scaleType="fitXY"/>

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yelp_rating_textview"
                        android:layout_marginStart="5dp" android:fontFamily="@font/nunito_sans"/>

                <RatingBar
                        android:id="@+id/yelp_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/google_rate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/yelp_rate_view">

                <ImageView
                        android:id="@+id/google_image"
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/google"
                        android:scaleType="fitXY"/>

                <TextView
                        android:id="@+id/google_rating_textview"
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:fontFamily="@font/nunito_sans"/>

                <RatingBar
                        android:id="@+id/google_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
