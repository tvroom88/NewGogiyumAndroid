<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/recyclerLinearLayout"
              android:layout_marginBottom="10dp"
              android:orientation="horizontal">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F7F7F7"
            android:background="#F7F7F7"
            card_view:cardElevation="0dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">


        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/customborder">


            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageView1"
                    app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                    android:id="@+id/foodImageKName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:text="음식 이름"
                    app:layout_constraintTop_toBottomOf="@+id/imageView1"
                    app:layout_constraintLeft_toLeftOf="parent" android:layout_marginLeft="18dp"
                    android:layout_marginTop="12dp" android:layout_marginBottom="15dp"
                    android:fontFamily="@font/godofont" android:textColor="#393939"/>

            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/saved"
                    android:id="@+id/imageButton"
                    app:layout_constraintTop_toBottomOf="@+id/imageView1"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="#F7F7F7"
                    android:layout_marginStart="11dp"
                    android:layout_marginEnd="11dp"
                    android:padding="8dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
