<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/recyclerLinearLayout"
              android:layout_marginStart="30dp"
              android:layout_marginEnd="30dp"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="20dp"
              android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="#F7F7F7"
            android:background="#F7F7F7"
            card_view:cardElevation="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/customborder">


            <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:src="@android:drawable/ic_menu_gallery"
                    card_view:srcCompat="@android:drawable/ic_menu_gallery"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/guideline1"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintGuide_percent="0.35"/>

            <TextView
                    android:id="@+id/resName"
                    android:text="가게 이름"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toRightOf="@id/guideline1"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="13dp"
                    android:textSize="20sp"
                    android:fontFamily="@font/godo"
                    android:textColor="#393939"
                    android:ems="9"
                    android:maxLines="2"/>


            <TextView
                    android:id="@+id/resAddress"
                    android:text="가게 주소"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/resName"
                    android:textSize="10sp"
                    android:layout_marginTop="4dp"
                    tools:ignore="SmallSp"
                    android:textColor="#707073" android:fontFamily="@font/nunito_sans"
                    android:ems="15"
                    android:maxLines="2"/>

            <!--    google and yelp rating bar-->
            <LinearLayout
                    android:id="@+id/yelp_rate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/resAddress">

                <ImageView
                        android:id="@+id/yelp_image"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/yelp"
                        android:scaleType="fitXY"
                        tools:ignore="SmallSp"/>

                <TextView
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/yelp_rating_textview"
                        android:layout_marginStart="5dp" android:fontFamily="@font/nunito_sans"/>

                <RatingBar
                        android:id="@+id/yelp_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"/>

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/google_rate_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/yelp_rate_view">

                <ImageView
                        android:id="@+id/google_image"
                        android:layout_width="8dp"
                        android:layout_height="12dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/google"
                        android:scaleType="fitXY"
                        tools:ignore="SmallSp"/>

                <TextView
                        android:id="@+id/google_rating_textview"
                        android:text="TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:fontFamily="@font/nunito_sans"/>

                <RatingBar
                        android:id="@+id/google_rating_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:numStars="5"
                        android:layout_marginStart="3dp"
                        android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <Button
                    android:id="@+id/menuButton"
                    android:text="Menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/restaurant_menu_call_button"
                    app:layout_constraintLeft_toLeftOf="@id/resName"
                    app:layout_constraintTop_toBottomOf="@id/google_rate_view"
                    android:layout_marginTop="10dp" android:fontFamily="@font/nunito_sans"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="10dp"/>

            <Button
                    android:id="@+id/callButton"
                    android:text="Call"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/restaurant_menu_call_button"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/menuButton"
                    app:layout_constraintTop_toTopOf="@id/menuButton" android:fontFamily="@font/nunito_sans"/>


            <!--    This part just for check DataBase is working well or not        -->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/resAddress">

                <ImageButton
                        android:id="@+id/saved"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:srcCompat="@drawable/saved"/>

            </LinearLayout>
            <!--    This part just for check DataBase is working well or not        -->

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="10dp">

        <Button
                android:id="@+id/uberButton"
                android:text="@string/ubereats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#F7F7F8"
                android:background="@drawable/restaurant_button"
                android:layout_marginEnd="5dp" android:fontFamily="@font/nunito_sans"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/GrubButton"
                android:text="@string/gurbhub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#F7F7F8"
                android:background="@drawable/restaurant_button"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" android:fontFamily="@font/nunito_sans"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

        <Button
                android:id="@+id/DoorButton"
                android:text="@string/doordash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#F7F7F8"
                android:background="@drawable/restaurant_button"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/nunito_sans"
                android:stateListAnimator="@null"
                android:textAllCaps="false"/>

    </LinearLayout>


</LinearLayout>